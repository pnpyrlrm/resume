<main class="ps-5">
    <h1 class="mb-4">{{name}}</h1>
    <div>
        <em>{{birthdate}} - {{deathdate}}</em>
    </div>
    <hr class="mb-2">
    <div>
        <b>Birthplace:</b> {{birthplace}}
    </div>
    <div>
        <b>Deathplace:</b> {{deathplace}}
    </div>
    <div>
        <b>Nationality:</b> {{nationality}}
    </div>
    <div>
        <b>Occupation:</b> {{occupation}}
    </div>
    <div>
        <b>Known for:</b>
        <ul>
            {{#each known_for}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <div class="mt-2">{{> title data="Education" big=true}}</div>
        {{#each education}}
        <b>Degree:</b> {{degree}}
        <br>
        <b>Field:</b> {{field}}
        <br>
        <b>Institution:</b> {{institution}}
        <br>
        <b>Graduated:</b> {{year}}
        {{/each}}
    </div>
    <div>
        <div class="mt-5">{{> title data="Notable publications" big=true}}</div>
        <ul>
            {{#each notable_publications}}
            <li>
                {{title}} <em>({{publisher}}, {{year}})</em>
            </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mt-5">{{> title data="Awards" big=true}}</div>
        <ul>
            {{#each awards}}
            <li>
                {{title}}
                ({{year}}) -
                <q>{{description}}</q>
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <div class="mt-2">{{> title data="Partners" big=true}}</div>
        <ul>
            {{#each partners}}
            <li>
                <b>{{name}}</b> ({{years}}) - {{relationship}}
            </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mt-5">{{> title data="Influences" big=true}}</div>
        <ul>
            {{#each influences}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mt-5">{{> title data="Influenced" big=true}}</div>
        <ul>
            {{#each influenced}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <div class="mt-2">{{> title data="Quotes" big=true}}</div>
        <ul>
            {{#each quotes}}
            <li><q>{{this}}</q></li>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="mt-5">{{> title data="Major discoveries" big=true}}</div>
        <ul>
            {{#each major_discoveries}}
            <li>
                <b>{{title}}</b>
                ({{year}}) -
                {{description}}
            </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <div class="my-5">{{> title data="Contributions" big=true}}</div>
        <div class="mb-5">{{> title data=contributions.title}}</div>

        <blockquote>
            <b>{{contributions.field}}</b>
            <br>
            <br>
            {{contributions.year}} {{contributions.description}}
        </blockquote>
    </div>
</main>