{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with main}}
	<main>
		<section class="mb-5">
			{{> title data=summary.title big=true }}
			<div>
				<p>
					{{summary.text}}
				</p>
			</div>
		</section>

		<section>
			{{> title data=experience.title big=false }}
			<div>
				<p>
					{{experience.text}}
				</p>
			</div>
		</section>
	</main>
	{{/with}}
</div>

